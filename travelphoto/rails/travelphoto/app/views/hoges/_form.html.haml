= form_for @hoge do |f|
  - if @hoge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hoge.errors.count, "error")} prohibited this hoge from being saved:"
      %ul
        - @hoge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titile
    = f.text_field :titile
  .field
    = f.label :comment
    = f.text_field :comment
  .field
    = f.label :startdate
    = f.date_select :startdate
  .field
    = f.label :enddate
    = f.date_select :enddate
  .actions
    = f.submit 'Save'
